# 자릿수 더하기
def solution(n):
    x = str(n)
    a = 0
    for i in range(len(x)):
        a += int(x[i])

    return a

# 재귀 풀이

def sum_digit(number):
    if number < 10:
        return number;
    return (number % 10) + sum_digit(number // 10) 

# 한줄 풀이

def sum_digit(number):
    return sum([int(i) for i in str(number)])
